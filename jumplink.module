 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function jumplink_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the jumplink module.
    case 'help.page.jumplink':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('A Drupal 8 Module which allows editors to create jump links without needing to set classes and anchors.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function jumplink_theme() {
  return [
    'page__some__core_paragraph' => [ //some core paragraph twig file that you will want to override.
      'template' => 'some--template-file-paragraph' //files is a .twig file
    ],
  ];
}


/**
 * Build jumplist links
 * @param $variables Drupal themeing Variables and arrays.
 *   Contains the renderable elements.
 */
function jumplink_preprocess_node(&$variables) {
  $headings = [];
  $render = [
    '#type' => 'markup',
    '#markup' => '<div class="section-jump-links"><div class="jump-links">',
    '#weight' => -50,
  ];

  $paragraphs = array_filter($variables['content']['field_paragraph'], 'paragraphs', ARRAY_FILTER_USE_BOTH);
  $jumplinks = array_map('build_jump_links', $paragraphs);

  if (count($jumplinks) >= 2) {
    foreach ($jumplinks as $jumplink) {
      $render['#markup'] .= "<div class='jump-link'><a href='{$jumplink['path']}'>{$jumplink['header']}</a></div>";
    }
    $render['#markup'] .= '</div></div>';
    $variables['content']['jump-link'] = $render;
  }
}

function paragraphs($paragraph, $key) {
  return 
    is_int($key) &&
    $paragraph['#paragraph']->getType() == 'basic_text' &&
    $paragraph['#paragraph']->__isset('field_plain_title') &&
    !$paragraph['#paragraph']->get('field_plain_title')->isEmpty();
}

function build_jump_links($paragraph) {
  return [
    'header' => $paragraph['#paragraph']->get('field_plain_title')->value,
    'path' => "#paragraph/{$paragraph['#paragraph']->id()}",
  ];
}
